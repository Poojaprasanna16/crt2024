// Read n*n matrix and print sum of reverse diagonal elements

#include <stdio.h>
int main() {
  int n;
  scanf("%d",&n);
  int a[n][n];
  int i,j,sum=0;
  for(i=0;i<n;i++)
  {
      for(j=0;j<n;j++){
      scanf("%d",&a[i][j]);
  }
}
for(i=0;i<n;i++)
{
    for(j=0;j<n;j++)
     if(i+j==n-1)
     {
         sum=sum+a[i][j];
     }
}
     printf("%d",sum);

}

